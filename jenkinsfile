pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh '''
                apt-get update
                apt-get install -y python3.9
                python3.9 -m pip install --upgrade pip
                python3.9 -m pip install pytest
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                cd /var/jenkins_home/workspace/jnkins/devops_class
                docker compose up -d
                '''
            }
        }
    }
}
