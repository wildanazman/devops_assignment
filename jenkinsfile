pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh '''
                apt-get update
                apt-get install -y python3 python3-venv python3-pip
                python3 -m venv /venv
                source /venv/bin/activate
                pip3 install pytest selenium
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                docker-compose up -d
                sleep 15
                python3 test_devopstest.py
                '''
            }
        }
    }
}
